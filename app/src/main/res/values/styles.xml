<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    Text-->
    <style name="GoodActionText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/good_action_normal_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GoodActionText.Small" parent="GoodActionText">
        <item name="android:textSize">@dimen/good_action_small_text_size</item>
    </style>

    <style name="GoodActionText.Large" parent="GoodActionText">
        <item name="android:textSize">@dimen/good_action_large_text_size</item>
        <item name="fontFamily">@font/avenir_lt_pro_black</item>
    </style>

    <style name="GoodActionText.Large.Extra" parent="GoodActionText.Large">
        <item name="android:textSize">@dimen/good_action_extra_large_text_size</item>
    </style>

    <!--    Buttons-->
    <style name="GoodActionButton" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/good_action_normal_button_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="shapeAppearance">@style/GoodActionButtonAppearance</item>
    </style>

    <style name="GoodActionButton.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/good_action_normal_button_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="GoodActionButton.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/good_action_normal_button_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:paddingRight">@dimen/good_action_large_padding</item>
        <item name="android:paddingLeft">@dimen/good_action_large_padding</item>
    </style>

    <!--    Text Inputs-->
    <style name="GoodActionInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
    </style>

    <style name="GoodActionInput.Password" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="endIconMode">password_toggle</item>
    </style>

    <!--    Appearance-->
    <style name="GoodActionButtonAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerRadius">@dimen/good_action_default_radius</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!--    CardView-->
    <style name="GoodActionCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="GoodActionCard.Clickable" parent="GoodActionCard">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@android:color/darker_gray</item>
    </style>
</resources>